{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake build",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "--build",
                    "."
                ],
                "options": {
                    "cwd": "${config:cmake.buildRoot}/${workspaceRootFolderName}"
                }
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake configure",
            "type": "process",
            "command": "cmake",
            "args": [
                "-B",
                "${config:cmake.buildRoot}/${workspaceRootFolderName}",
                "-DMSVC_TOOLSET_VERSION=150",
                "-DCMAKE_GENERATOR_PLATFORM=x64",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=${config:cmake.toolchainFile}",
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "docker run",
            "type": "shell",
            "windows": {
                "command": "docker",
                "args": [
                    "run",
                    "--rm",
                    "-v",
                    "${workspaceFolder}:/root/src:ro",
                    "--privileged",
                    "-it",
                    "cppipfs/cpp-multihash"
                ]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(/root/src/)(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 5,
                    "message": 6
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}