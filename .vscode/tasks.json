{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "buildType",
      "type": "pickString",
      "options": [
        "Release",
        "Debug"
      ],
      "default": "Debug",
      "description": "Type of build"
    },
    {
      "id": "generator",
      "type": "pickString",
      "options": [
        "Ninja",
        "Visual Studio 15 2017 Win64",
        "Visual Studio 15 2017"
      ],
      "default": "Visual Studio 15 2017 Win64",
      "description": "Build generator"
    }
  ],
  "tasks": [
    {
      "label": "cmake test",
      "type": "shell",
      "command": "ctest",
      "args": [
        "-C",
        "Debug",
        "--output-on-failure"
      ],
      "options": {
        "cwd": "${config:cmake.buildRoot}/${workspaceRootFolderName}"
      },
      "problemMatcher": []
    },
    {
      "label": "cmake build",
      "type": "shell",
      "windows": {
        "command": "cmake",
        "args": [
          "--build",
          "."
        ],
        "options": {
          "cwd": "${config:cmake.buildRoot}/${workspaceRootFolderName}"
        }
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cmake configure",
      "type": "process",
      "command": "cmake",
      "args": [
        "-B",
        "${config:cmake.buildRoot}/${workspaceRootFolderName}",
        "-G${input:generator}",
        "-DCMAKE_TOOLCHAIN_FILE=${config:cmake.toolchainFile}",
        "-DCMAKE_BUILD_TYPE=${input:buildType}",
        "${workspaceFolder}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "docker build",
      "type": "shell",
      "command": "docker",
      "args": [
        "build",
        "-t",
        "cppipfs/cpp-multihash",
        "${workspaceFolder}"
      ],
      "options": {
        "env": {
          "DOCKER_BUILDKIT": "1"
        }
      }
    },
    {
      "label": "docker run",
      "dependsOn": "docker build",
      "type": "shell",
      "windows": {
        "command": "docker",
        "args": [
          "run",
          "--rm",
          "--privileged",
          "-it",
          "cppipfs/cpp-multihash"
        ]
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(/root/src/)(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 2,
          "line": 3,
          "column": 4,
          "severity": 5,
          "message": 6
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ]
    }
  ]
}